---
// Hier definieren wir die Links für das Menü
const navItems = [
  { name: 'Start', href: '/' },
  { name: 'Über uns', href: '/ueber-uns' },
  { name: 'Termine', href: '/termine' },
  { name: 'Kontakt', href: '/kontakt' },
];
---

<header class="fixed w-full z-50 transition-all duration-300 bg-white/90 dark:bg-burschen-grau/90 backdrop-blur-md border-b border-gray-200 dark:border-white/10">
  <div class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
    
    <a href="/" class="text-xl font-serif font-bold tracking-wider text-burschen-blau dark:text-burschen-gold">
      STADTBURSCHEN
    </a>

    <nav class="hidden md:flex gap-8 items-center">
      {navItems.map(item => (
        <a href={item.href} class="text-sm font-semibold uppercase tracking-widest text-gray-600 hover:text-burschen-blau dark:text-gray-300 dark:hover:text-white transition-colors">
          {item.name}
        </a>
      ))}

      <button id="theme-toggle" class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-white/10 transition-colors" aria-label="Dark Mode umschalten">
        <svg class="w-5 h-5 hidden dark:block text-burschen-gold" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
        </svg>
        <svg class="w-5 h-5 block dark:hidden text-burschen-blau" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
        </svg>
      </button>
    </nav>

    <button class="md:hidden text-burschen-blau dark:text-white">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
    </button>
  </div>
</header>

<script>
  // Logik für den Schalter
  const themeToggle = document.getElementById('theme-toggle');
  
  // Klick-Event
  themeToggle?.addEventListener('click', () => {
    const element = document.documentElement;
    element.classList.toggle("dark");
    
    const isDark = element.classList.contains("dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
  });
</script>