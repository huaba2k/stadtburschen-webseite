---
// WICHTIG: Wir sagen Astro, welche Pfade es bauen soll.
// Wir bauen nur den Basis-Pfad "/admin", den Rest macht React im Browser.
export function getStaticPaths() {
  return [
    { params: { slug: undefined } }, // Das entspricht "/admin"
  ];
}
---
<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Stadtburschen Admin</title>
  </head>
  <body>
    <div id="app"></div>
    <script>
      import { renderStudio } from 'sanity';
      import config from '../../../sanity.config';

      renderStudio(document.getElementById('app'), config);
    </script>
    <style>
      html, body, #app { height: 100%; margin: 0; }
    </style>
  </body>
</html>