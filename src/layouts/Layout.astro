---
// Importiere Header und Footer
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// HIER IST DER FIX: Wir deklarieren die Variablen mit Standard-Werten und korrigieren Astro.url
const { 
  title = 'Stadtburschen Freising – Freunde fürs Leben seit 1850', // Fallback Titel
  description = 'Das älteste soziale Netzwerk Freisings. Wir verbinden bayerische Tradition mit modernen Events, Stammtischen und echtem Zusammenhalt. Werde Stadtbursche!', // Fallback Beschreibung
  canonicalURL = new URL(Astro.url.pathname, Astro.site), // Korrekte, volle URL
} = Astro.props;

// Die Variable 'canonicalURL' enthält jetzt den korrekten Wert


// Bild zentral definiert
const bgImage = "/hero.jpg"; 
---

<!doctype html>
<html lang="de" class="scroll-smooth h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />

		<script data-goatcounter="https://stadtburschen.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>
		
		<link rel="icon" type="image/x-icon" href="/favicon.ico" /> 
		
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="canonical" href={canonicalURL} />

		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:url" content={canonicalURL} />
		<meta property="og:site_name" content="Stadtburschen Freising" />
		<meta property="og:type" content="website" />
		
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/fonts/vollkorn.css" />

		// Ausschnitt aus <head> in src/layouts/Layout.astro

<script is:inline>
  const html = document.documentElement;
  const storedTheme = localStorage.getItem('theme');
  const prefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;

  // 1. Prüfen, ob eine Einstellung im Speicher existiert
  if (storedTheme) {
    if (storedTheme === 'dark') {
      html.classList.add('dark');
    } else {
      html.classList.remove('dark');
    }
  // 2. Falls keine Einstellung existiert, den System-Modus prüfen (Fallback)
  } else if (prefersDark) {
    html.classList.add('dark');
  }
</script>

		</head>
	
	<body class="flex flex-col min-h-screen font-sans antialiased transition-colors duration-300 relative">

		<div class="fixed inset-0 z-[-1]">
			<img src={bgImage} alt="" class="w-full h-full object-cover" />
			<div class="absolute inset-0 bg-white/90 dark:bg-black/95 transition-colors duration-500"></div>
		</div>
		
		<Header />
		
		<main class="flex-grow pt-24 pb-12">
			<slot />
		</main>

		<Footer />
		
	</body>
</html>